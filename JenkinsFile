pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-creds')
        AWS_SECRET_ACCESS_KEY = credentials('aws-creds')
        AWS_DEFAULT_REGION    = 'ap-south-1'
    }

    stages {

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh '''
terraform apply -auto-approve \
  -var="key_name=key"
                '''
            }
        }

        stage('Get EC2 IP from Terraform') {
            steps {
                script {
                    env.EC2_IP = sh(
                        script: "terraform output -json ec2_public_ips | jq -r '.[0]'",
                        returnStdout: true
                    ).trim()
                }
                echo "EC2 Public IP: ${env.EC2_IP}"
            }
        }

        stage('Debug EC2 IP') {
            steps {
                echo "DEBUG: EC2_IP = ${env.EC2_IP}"
            }
        }

        stage('Install Docker on EC2') {
            steps {
                sshagent(['ec2-key']) {
                    sh """
ssh -o StrictHostKeyChecking=no ubuntu@${EC2_IP} '
sudo apt update -y
sudo apt install -y docker.io
sudo systemctl start docker
sudo systemctl enable docker
sudo usermod -aG docker ubuntu
'
                    """
                }
            }
        }

        stage('Deploy Application') {
            steps {
                sshagent(['ec2-key']) {
                    sh """
ssh -o StrictHostKeyChecking=no ubuntu@${EC2_IP} '
docker pull bansil374/pyapp
docker stop pythoncontainer || true
docker rm pythoncontainer || true
docker run -d -p 8082:8081 --name pythoncontainer bansil374/pyapp
'
                    """
                }
            }
        }
    }
}
